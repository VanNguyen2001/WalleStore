            <script>
                $(function () {
                    $('ul.preview-thumbnail li.hinhanh').click(function () {
                        var imgPath = $(this).find('img').attr('src');
                        $('#main-img img').attr('src', imgPath);
                    });
                });
            </script>
            <script>
                $('#main-img').mouseenter(function () {
                    var zoom = $(this).find('img').data('zoom');
                    $(this).css('background-image', 'url(' + zoom + ')');
                }).mouseleave(function () {
                    $(this).css('background-image', 'none');
                });
            </script>
            <script>
                function showProductInfoForm() {
                    var productInfoForm = document.getElementById("product-info-form");
                    var userReviewForm = document.getElementById("user-review-form");

                    productInfoForm.style.display = "block";
                    userReviewForm.style.display = "none";
                }

                function showUserReviewForm() {
                    var productInfoForm = document.getElementById("product-info-form");
                    var userReviewForm = document.getElementById("user-review-form");

                    productInfoForm.style.display = "none";
                    userReviewForm.style.display = "block";
                }
            </script>
            <script>
                const stars = document.querySelectorAll('.rating input');
                const ratingText = document.getElementById('rating-text');

                stars.forEach((star, index) => {
                    star.addEventListener('click', () => {
                        // Uncheck all stars
                        stars.forEach((s) => {
                            s.checked = false;
                        });

                        // Check the clicked star and all previous ones
                        let i = index;
                        while (stars[i] !== stars[0]) {
                            stars[i].checked = true;
                            i--;
                        }

                        // Mark the clicked star as active
                        star.checked = true;

                        // Show the corresponding rating text
                        ratingText.textContent = star.nextElementSibling.getAttribute('data-rating-text');
                    });
                });
            </script>
