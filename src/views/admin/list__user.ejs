<%- include("header.ejs")%>
    <div style="padding-left:16px">
        <h2>Người Dùng</h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Họ</th>
                <th scope="col">Tên</th>
                <th scope="col">Email</th>
                <th scope="col">Địa chỉ</th>
                <th class="text-center" scope="col">Tuỳ chọn</th>
              </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                    <td><%= dataUser[i].firstName %></td>
                    <td><%= dataUser[i].lastName %></td>
                    <td><%= dataUser[i].email %></td>
                    <td><%= dataUser[i].address %></td>
                    <td>
                      <div class="row">
                        <form class="col-md-6" action="/edit-user/<%= dataUser[i].id %>" method="GET">
                          <button type="submit" class="btn btn-dark">Xem</button>
                        </form>
                        <form class="col-md-6" action="/delete-user" method="post">
                          <input type="text" hidden value="<%= dataUser[i].id %>" name="userId"/>
                          <button type="submit" class="btn btn-dark">Xoá</button>
                        </form>
                      </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
          </table>

          <form action="/create-user" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Họ</label>
              <input type="text" class="form-control" placeholder="Nhập họ tên" name="firstName">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Tên</label>
                <input type="text" class="form-control" placeholder="Nhập tên" name="lastName">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" placeholder="Nhập email liên hệ" name="email">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Địa chỉ</label>
                <input type="text" class="form-control" placeholder="Nhập địa chỉ" name="address">
              </div>
            <button type="submit" class="btn btn-primary">Thêm</button>
          </form>
    </div>
    <%- include("footer.ejs")%>    
