<%- include("header.ejs")%>
    <div class="container">
        <h4 class="">Danh Mục Sản Phẩm</h4>
        <a href="/add-category" class="btn btn-outline-dark">Thêm Mới Danh Mục</a>
        <table class="table">
            <thead>
              <tr>
                <th scope="col" class="text-center">Ảnh Danh mục</th>
                <th scope="col">Tên Danh Mục</th>
                <th scope="col">Mô Tả Danh Mục</th>
                <th class="text-center" scope="col">Xem</th>
              </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataCategory.length; i++) { %>
                <tr>
                    <td class="text-center">
                      <img src="/img/<%= dataCategory[i].category_image %>" width="50px" style="border-radius: 5px;">
                    </td>
                    <td><%= dataCategory[i].category_name %></td>
                    <td><%= dataCategory[i].category_describe %></td>
                    <td class="text-center">
                      <div class="row">
                        <form action="/edit-category/<%= dataCategory[i].category_id %>" method="GET">
                          <button type="submit" class="btn btn-outline-dark"><i class="fa fa-clipboard-list"></i></button>
                        </form>
                      </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
          </table>
    </div>
    <%- include("footer.ejs")%>  