<%- include("header.ejs")%>
<div class="container">
    <h4>Thêm Mới Hãng</h4>
    <form action="/create-new-brand" method="POST" class="needs-validation">
        <div class="form-group was-validated">
        <label lass="form-label" for="text">Tên Hãng</label>
        <input type="text" class="form-control" placeholder="Nhập tên của hãng" name="name" required>
        <div class="invalid-feedback">
            Yêu cầu nhập tên hãng
        </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Thông Tin Thêm</label>
            <input type="text" class="form-control" placeholder="Thêm mô tả" name="describe" required>
            <div class="invalid-feedback">
                Yêu cầu nhập thông tin
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Đường Dẫn</label>
            <input type="text" class="form-control" placeholder="Nhập đường dẫn" name="link" required>
            <div class="invalid-feedback">
                Yêu cầu chọn đường dẫn
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="file">Hình Đại Diện</label>
            <input type="file" class="form-control" placeholder="Chọn hình đại diện" name="logo" required>
            <div class="invalid-feedback">
                Yêu cầu chọn logo thương hiệu
            </div>
        </div>
        <div class="pt-1">
            <button type="submit" class="btn btn-outline-info">Thêm</button>
            <a href="/brand-list" class="btn btn-outline-dark">Trở Về</a>
        </div>
    </form>
</div>
<%- include("footer.ejs")%>