<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin</title>
  <link rel="stylesheet" href="/css/style.css">
  </link>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body class="container">
  <%- include("menu.ejs")%>
    <div style="padding-left:16px">
      <h2 class="text-center p-5">Người dùng</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Tên</th>
            <th scope="col">Giới Tính</th>
            <th scope="col">Email</th>
            <th scope="col">Số Điện Thoại</th>
            <th scope="col">Địa Chỉ</th>
            <th class="text-center" scope="col">Tuỳ chọn</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < datauserdetail.length; i++) { %>
            <tr>
              <td>
                <%= datauserdetail[i].name %>
              </td>
              <td>
                <%= datauserdetail[i].gender %>
              </td>
              <td>
                <%= datauserdetail[i].email %>
              </td>
              <td>
                <%= datauserdetail[i].phone %>
              </td>
              <td>
                <%= datauserdetail[i].address %>
              </td>
              <td>
                <div class="row">
                  <form class="col-md-6" action="/edit-userdetail/<%= datauserdetail[i].id %>" method="GET">
                    <button type="submit" class="btn btn-dark">View</button>
                  </form>
                  <form class="col-md-6" action="/delete-userdetail" method="post">
                    <input type="text" hidden value="<%= datauserdetail[i].id %>" name="userdetailId" />
                    <button type="submit" class="btn btn-dark">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>

      <form action="/create-new-userdetail" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Tên</label>
          <input type="text" class="form-control" placeholder="Nhập tên của bạn...." name="name">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Giới Tính</label>
          <input type="text" class="form-control" placeholder="Nhập tên của bạn...." name="gender">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input type="email" class="form-control" placeholder="Nhập email...." name="email">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Số Điện Thoại</label>
          <input type="text" class="form-control" placeholder="Nhập số điện thoại...." name="phone">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Địa chỉ</label>
          <input type="text" class="form-control" placeholder="Nhập địa chỉ...." name="address">
        </div>
        <br> <button type="submit" class="btn btn-primary">Add</button> </br>
      </form>
    </div>
</body>

</html>