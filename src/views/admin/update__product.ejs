<%- include("header.ejs")%>
    <div class="product">
        <form action="/update-product" method="POST">
            <div class="form-group text-center pt-5">
                <img src="/img/<%= dataProduct.image %>" width="200px" height="200px" style="border-radius: 15px;">
            </div>
            <div hidden class="form-group">
                <input type="text" class="form-control" placeholder="" name="image" value="<%= dataProduct.image %>">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Tên Sản Phẩm</label>
                <input type="text" class="form-control" placeholder="Tên Của Hãng" name="name"
                    value="<%= dataProduct.name %>">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Thông Tin Sản Phẩm</label>
                <input type="text" class="form-control" placeholder="Mô tả" name="describe"
                    value="<%= dataProduct.describe %>">
            </div>
            <input type="text" hidden value="<%= dataProduct.id %>" name="id" />
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
    </div>
    <%- include("footer.ejs")%>