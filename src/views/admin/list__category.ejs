<%- include("header.ejs")%>
    <div class="container">
        <h2 class="">Danh Mục Sản Phẩm</h2>
        <a href="/add-category" class="btn btn-dark">Thêm Mới Danh Mục</a>
        <table class="table">
            <thead>
              <tr>
                <th scope="col" class="text-center">Ảnh Danh mục</th>
                <th scope="col">Tên Danh Mục</th>
                <th scope="col">Mô Tả Danh Mục</th>
                <th class="text-center" scope="col">Tuỳ chọn</th>
              </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataCategory.length; i++) { %>
                <tr>
                    <td class="text-center">
                      <img src="/img/<%= dataCategory[i].image %>" width="50px" style="border-radius: 5px;">
                    </td>
                    <td><%= dataCategory[i].name %></td>
                    <td><%= dataCategory[i].describe %></td>
                    <td class="text-center">
                      <div class="row">
                        <form class="col-md-6" action="/edit-category/<%= dataCategory[i].id %>" method="GET">
                          <button type="submit" class="btn btn-dark">Xem</button>
                        </form>
                        <form class="col-md-6" action="/delete-category" method="post">
                          <input type="text" hidden value="<%= dataCategory[i].id %>" name="categoryId"/>
                          <button type="submit" class="btn btn-dark">Xoá</button>
                        </form>
                      </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
          </table>
    </div>
    <%- include("footer.ejs")%>  