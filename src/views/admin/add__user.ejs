<%- include("header.ejs")%>
<div class="container">
  <h4>Thêm người dùng mới</h4>
    <form action="/create-user" method="POST" class="needs-validation">
        <div class="form-group was-validated">
          <label class="form-label" for="text">Họ và tên</label>
          <input placeholder="Nhập đầy đủ họ và tên" class="form-control" type="text" name="name" required>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="radio">Giới tính</label>
          <fieldset class="row">
            <div class="col-md-1">
              <input type="radio" name="gender" value="Nam">
              <label for="radio">Nam</label>
            </div>
            <div class="col-md-1">
              <input type="radio" name="gender" value="Nữ">
              <label for="radio">Nữ</label>
            </div>
            <div class="col-md-1">
              <input type="radio" name="gender" value="Khác" checked>
              <label for="louie">Khác</label>
            </div>
        </fieldset>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="date">Ngày sinh</label>
          <input value="2001-01-01" class="form-control" type="date" name="birthDay" required>
          <div class="invalid-feedback">
              Yêu cầu nhập ngày sinh
          </div>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="number">Số điện thoại</label>
          <input maxlength="4" placeholder="Nhận đầy đủ số điện thoại" class="form-control" min="0" type="number" name="phone" required>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="text">Địa chỉ</label>
          <textarea placeholder="Nhận đầy đủ địa chỉ liên hệ" class="form-control" type="text" name="address" required></textarea>
        </div>
        <input hidden type="text" class="form-control" placeholder="Nhập mật khẩu" name="password">
        <input hidden type="text" class="form-control" placeholder="Chọn vai trò" name="role">
        <div class="pt-1">
          <button type="submit" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#exampleModal"><b>Thêm</b></button>
          <a class="btn btn-outline-dark" href="/">Trở về</a>
        </div>
      </form>
</div>
<%- include("footer.ejs")%>