<%- include("header.ejs")%>
<div class="container">
  <h4>Thêm người dùng mới</h4>
    <form action="/create-user" method="POST" class="needs-validation">
        <div class="form-group was-validated">
          <label class="form-label" for="text">Họ và tên</label>
          <input class="form-control" type="text" name="name" required>
          <div class="invalid-feedback">
              Yêu cầu nhập họ và tên
          </div>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="text">Giới tính</label>
          <input class="form-control" type="text" name="gender" required>
          <div class="invalid-feedback">
              Yêu cầu nhập giới tính
          </div>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="date">Ngày sinh</label>
          <input class="form-control" type="date" name="birthDay" required>
          <div class="invalid-feedback">
              Yêu cầu nhập ngày sinh
          </div>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="text">Số điện thoại</label>
          <input class="form-control" type="text" name="phone" required>
          <div class="invalid-feedback">
              Yêu cầu nhập số điện thoại
          </div>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="text">Địa chỉ</label>
          <input class="form-control" type="text" name="address" required>
          <div class="invalid-feedback">
              Yêu cầu nhập địa chỉ
          </div>
        </div>
        <input hidden type="text" class="form-control" placeholder="Nhập mật khẩu" name="password">
        <input hidden type="text" class="form-control" placeholder="Chọn vai trò" name="role">
        <div class="pt-1">
          <button type="submit" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#exampleModal">Thêm</button>
          <a class="btn btn-outline-dark" href="/">Trở về</a>
        </div>
      </form>
</div>
<%- include("footer.ejs")%>