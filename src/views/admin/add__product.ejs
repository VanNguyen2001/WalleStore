<%- include("header.ejs")%>
<div class="container">
    <h4>Thêm Mới Hãng</h4>
    <form action="/create-new-product" method="POST" class="needs-validation">
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Tên sản phẩm</label>
            <input type="text" class="form-control" placeholder="Nhập tên của hãng" name="name" required>
            <div class="invalid-feedback">
                Yêu cầu nhập tên sản phẩm
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Thông mô tả sản phẩm</label>
            <input type="text" class="form-control" placeholder="Thêm mô tả" name="describe" required>
            <div class="invalid-feedback">
                Yêu cầu nhập mô tả
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Số lượng sản phẩm</label>
            <input type="text" class="form-control" placeholder="Nhập đường dẫn" name="quantity" required>
            <div class="invalid-feedback">
                Chọn số lượng sản phẩm
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Giá sản phẩm</label>
            <input type="text" class="form-control" placeholder="Chọn hình đại diện" name="price" required>
            <div class="invalid-feedback">
                Yêu cầu nhập giá sản phẩm
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Đánh giá</label>
            <input type="text" class="form-control" placeholder="Chọn hình đại diện" name="view" required>
            <div class="invalid-feedback">
                Yêu cầu nhập đánh giá
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Danh mục</label>
            <input type="text" class="form-control" placeholder="Chọn hình đại diện" name="categoryId" required>
            <div class="invalid-feedback">
                Yêu cầu chọn danh mục
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="text">Hãng</label>
            <input type="text" class="form-control" placeholder="Chọn hình đại diện" name="brandId" required>
            <div class="invalid-feedback">
                Yêu cầu chọn hãng
            </div>
        </div>
        <div class="form-group was-validated">
            <label lass="form-label" for="file">Ảnh sản phẩm</label>
            <input type="file" class="form-control" placeholder="Chọn hình đại diện" name="image" required>
            <div class="invalid-feedback">
                Yêu cầu chọn ảnh sản phẩm
            </div>
        </div>
        <div class="pt-1">
            <button type="submit" class="btn btn-outline-info">Thêm</button>
            <a href="/brand-list" class="btn btn-outline-dark">Trở Về</a>
        </div>
    </form>
</div>
<%- include("footer.ejs")%>